#!/bin/bash

echo -e "AutoRiceVoidDesktopLinux\n<>  <>  <>\n<>  <>  <>\n<>  <>  <>"

# Update system
sudo xbps-install -Syu

# Install packages I like
sudo xbps-install -Sy alsa-utils base-devel base-system curl dmenu feh firefox font-awesome font-inconsolata-otf giflib-devel git github-cli grub htop imlib2-devel libXft-devel libXinerama-devel libexif-devel libinput-gestures mpv neofetch neovim vim wget xbanish xdotool xorg xsel zathura zathura-pdf-poppler zsh
sudo xbps-install -Sy alsa-utils base-devel base-system curl dmenu dunst feh firefox font-awesome font-inconsolata-otf giflib-devel git github-cli grub htop imlib2-devel libXft-devel libXinerama-devel libexif-devel libinput-gestures mpv neofetch neovim tty-clock vim wget xbanish xdotool xorg xsel zathura zathura-pdf-poppler zsh
# Copy config/* to $HOME/.config/
mkdir -p $HOME/.config/
cp -r ./config/* $HOME/.config/

# Sending files to specific locations
mkdir -p $HOME/files/ $HOME/files/pictures/ $HOME/files/downloads/ $HOME/files/backups/ $HOME/files/github/ $HOME/files/writing
cp -r ./backgrounds/ $HOME/files/pictures/

# Sending .otherfiles to specific locations
sudo cp $HOME/.config/.otherfiles/sudoers /etc/sudoers
# Send Sweet-cursors theme to defaults icons folder
sudo cp -r $HOME/.config/.otherfiles/Sweet-cursors /usr/share/icons/

# Symbolic link xinitrc
ln -sf $HOME/.config/X11/xinitrc $HOME/.xinitrc

# Symbolic link the zshrc file
ln -sf $HOME/.config/zsh/zshrc $HOME/.zshrc
sudo chsh -s /bin/zsh

# Recompile everything in suckelessutils/
bash $HOME/.config/sucklessutils/addons_dwm/full_make

echo -e "<>  <>  <>\n<>  <>  <>\n<>  <>  <>\nHope all went well!"
