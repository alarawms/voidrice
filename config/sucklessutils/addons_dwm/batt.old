#!/bin/bash

# Show battery status

# Check if adapter is connected
adapterON=$(acpi -a | awk '{print($3)}')
if [[ $adapterON = "on-line" ]];
then
    outputVAR=" "
fi
# Check current battery status
battSTAT=$(acpi -b | awk '{print($4)}' | sed -r 's/,//g')
# Arithmetic able variable
battART=$(echo $battSTAT | sed -r 's/%//g')

if [[ $battART -lt 25 ]];
then
    outputVAR+=" $battSTAT"
elif [[ $battART -lt 50 ]];
then
    outputVAR+=" $battSTAT"
elif [[ $battART -lt 75 ]];
then
    outputVAR+=" $battSTAT"
elif [[ $battART -lt 100 ]];
then
    outputVAR+=" $battSTAT"
else
    outputVAR+=" FULL"
fi

echo $outputVAR
