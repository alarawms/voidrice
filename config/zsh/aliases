#!/bin/bash

# Short aliases
alias \
	vim=nvim \
	vi=nvim \
	v=nvim \
	x=startx \
    rg=ranger \
    s=sxiv \
    n=ncmpcpp \
    d=disown \
    z=zathura \
    h=htop
#   emacs=emacsclient \
#   e=emacs \

# PKG Manager
alias \
	xbi="sudo xbps-install -S" \
	xbr="sudo xbps-remove" \
	xbq="xbps-query" \
	xbqr="xbps-query -Rs" \
	xbql="xbps-query -l"

# Navigation rel
alias \
	ls="ls --color=auto" \
	ll="ls -lGh" \
	la="ll -a" \
	cl=clear

# .config
alias \
	cddwm="cd $HOME/.config/sucklessutils/dwm/" \
	cdst="cd $HOME/.config/sucklessutils/st/" \
	cdad="cd $HOME/.config/sucklessutils/addons_dwm/" \
	cdsl="cd $HOME/.config/sucklessutils/" \
	cdz="cd $HOME/.config/zsh/" \
	cdx="cd $HOME/.config/X11/"

# files
alias \
	cdf="cd $HOME/files/" \
    cdsc="cd $HOME/files/sync/" \
	cdp="cd $HOME/files/projects/" \
	cdg="cd $HOME/files/github/" \
	cdv="cd $HOME/files/videos/" \
	cdm="cd $HOME/files/music/" \
	cdmm="cd $HOME/files/manga/" \
	cds="cd $HOME/files/pictures/screenshots/" \
	cdpp="cd $HOME/files/pictures/" \
	cdgv="cd $HOME/files/github/voidrice" \
	cdd="cd $HOME/files/downloads/" \
	cdh="cd $HOME && clear"

# GitHub
alias \
    ga="git add" \
    gs="git status" \
    gc="git commit -m" \
    gp="git push -u origin main"

# Manga-py
alias \
    mgi="manga-py -d ~/files/manga -r -R" \
    mgl="manga-py -d ~/files/manga -r -R -c 1"

# Youtube rel
alias \
    yt="ytfzf -t" \
    yts="ytfzf -t --subs=3" \
    yta="bash ythelp a" \
    ytaa="bash ythelp a urlz" \
    ytv="bash ythelp v" \
    ytvv="bash ythelp v urlz"

# Random
alias \
    grep="grep --colour=auto" \
    fetch=neofetch \
	fetchb="neofetch --config $HOME/.config/neofetch/config_big.conf" \
    tclock="tty-clock -Dc -C 4" \
    br="bash ./renew.dir" \
	am="alsamixer"
