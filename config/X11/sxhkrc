# Volume control
XF86Audio{Raise,Lower}Volume
    vol {inc,dec} 3

XF86AudioMute
    vol toggle

# Scrot
Print
    scrot -z 'fullscreenss_%T_%d-%m-%Y_$wx$h.png' -e 'mv $f ~/files/pictures/screenshots/'; dunstify -i /dev/null "Screenshot"

shift + Print
    scrot -z -s 'areass_%T_%d-%m-%Y_$wx$h.png' -e 'mv $f ~/files/pictures/screenshots/'

ctrl + Print
    scrot -z -u 'windowss_%T_%d-%m-%Y_$wx$h.png' -e 'mv $f ~/files/pictures/screenshots/'; dunstify -i /dev/null "Screenshot"

# Record screen with ffmpeg
XF86TouchpadToggle
    dunstify -i /dev/null "  Recording Started";
    ffmpeg -video_size 1600x900 -framerate 25 -f x11grab -i :0.0+0,0 ~/files/videos/screenrecording_$(($(ls ~/files/videos/ | wc -l)+1)).mp4

shift + XF86TouchpadToggle
    pkill ffmpeg; dunstify -i /dev/null "  Recording Finished"

alt + m
    bash mangareading

# Lock screen
Scroll_Lock
    xautolock -locknow

# Screenkey enable/disable
XF86Calculator
    screenkey --font-color \#536878 -t 2 -s small -f inconsolata --opacity 0.8

shift + XF86Calculator
    pkill screenkey

# Mpc settings
XF86Audio{Next,Prev}
    mpc {next,prev}

shift + XF86Audio{Next,Prev}
    mpc seek {+,-}5%

XF86AudioPlay
    mpc toggle

# Change brightness
XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 10
