# Volume control
XF86Audio{Raise,Lower}Volume
    vol {inc,dec} 10

XF86AudioMute
    vol toggle

# Scrot
Print
    scrot 'fullscreenss_%T_%d-%m-%Y_$wx$h.png' -e 'mv $f ~/files/pictures/screenshots/'

shift + Print
    scrot -s 'areass_%T_%d-%m-%Y_$wx$h.png' -e 'mv $f ~/files/pictures/screenshots/'

ctrl + Print
    scrot -u 'windowss_%T_%d-%m-%Y_$wx$h.png' -e 'mv $f ~/files/pictures/screenshots/'

# Lock screen
XF86Sleep
    pkill picom; \
    env \
    XSECURELOCK_FONT="inconsolata:size=12" \
    XSECURELOCK_PASSWORD_PROMPT=time_hex \
    XSECURELOCK_DATETIME_FORMAT="%A %d-%B %T" \
    XSECURELOCK_SHOW_DATETIME=1 \
    XSECURELOCK_SHOW_HOSTNAME=0 \
    XSECURELOCK_SINGLE_AUTH_WINDOW=1 \
    xsecurelock; \
    picom

# Screenkey enable/disable
XF86Calculator
    screenkey --font-color \#536878 -t 2 -s small -f inconsolata --opacity 0.8

shift + XF86Calculator
    pkill screenkey

#BrightnessKEYS{up,down}
#   xbacklight -{inc,dec} 10

# Mpc settings
XF86Audio{Next,Prev}
    mpc {next,prev}

shift + XF86Audio{Next,Prev}
    mpc seek {+,-}5%

XF86AudioPlay
    mpc toggle

