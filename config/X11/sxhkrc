# Volume control
XF86Audio{Raise,Lower}Volume
    vol {inc,dec} 3

XF86AudioMute
    vol toggle

# Scrot
Print
    bash ssutil ss full

shift + Print
    bash ssutil ss area

ctrl + Print
    bash ssutil ss win

# Record screen with ffmpeg
XF86TouchpadToggle
    bash ssutil rec play

shift + XF86TouchpadToggle
    bash ssutil rec pause

alt + k
    bash mangareading chap

alt + j
    bash mangareading

# Lock screen
Scroll_Lock
    xautolock -locknow

# Screenkey enable/disable
XF86Calculator
    screenkey --font-color \#536878 -t 2 -s small -f inconsolata --opacity 0.8

shift + XF86Calculator
    pkill screenkey

# Mpc settings
XF86Audio{Next,Prev}
    mpc {next,prev}

shift + XF86Audio{Next,Prev}
    mpc seek {+,-}5%

XF86AudioPlay
    mpc toggle

# Change brightness
XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 10
